@model List<TodoApp.Models.Domain.Employee>

@{
}

<div class="container mt-3 mb-3">
  <h1 class="fw-bolder text-center">Employee</h1>
  <a class="btn btn-warning" asp-controller="Employees" asp-action="Add">Add</a>
</div>

<table class="table table-striped" border="1">
    <thead>
        <tr>
            <th>ID</th>
            <th>Name</th>
            <th>Email</th>
            <th>Salary</th>
            <th>DOB</th>
            <th>Department</th>
            <th>Action</th>
        </tr>
    </thead>
    <tbody>
        @foreach(var employee in Model)
        {
            <tr>
                <td>@employee.Id</td>
                <td>@employee.Name</td>
                <td>@employee.Email</td>
                <td>@employee.Salary</td>
                <td>@employee.DateOfBirth.ToString("dd-mm-yy")</td>
                <td>@employee.Department</td>
                <td><a href="Employees/View/@employee.Id" class="btn btn-success">View</a></td>
            </tr>
        }
    </tbody>
</table>