@model List<TodoApp.Models.Domain.Employee>

@{
}

<h1 class="mt-3 mb-3 fw-bolder text-center">Employee</h1>

<table class="table table-striped" border="1">
    <thead>
        <tr>
            <th>ID</th>
            <th>Name</th>
            <th>Email</th>
            <th>Salary</th>
            <th>DOB</th>
            <th>Department</th>
            <th>Action</th>
        </tr>
    </thead>
    <tbody>
        @foreach(var employee in Model)
        {
            <tr>
                <td>@employee.Id</td>
                <td>@employee.Name</td>
                <td>@employee.Email</td>
                <td>@employee.Salary</td>
                <td>@employee.DateOfBirth.ToString("dd-mm-yy")</td>
                <td>@employee.Department</td>
                <td><a href="Employees/View/@employee.Id" class="text-success text-decoration-none">View</a></td>
            </tr>
        }
    </tbody>
</table>